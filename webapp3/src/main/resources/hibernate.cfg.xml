      <mapping class="cn.com.scitc.webapp3.CourseEntity"/>
      <mapping class="cn.com.scitc.webapp3.StudentEntity"/>
      <mapping class="cn.com.scitc.webapp3.StudentscoreEntity"/>
      <mapping class="cn.com.scitc.webapp3.model.Student"/>
      <mapping class="cn.com.scitc.webapp3.model.Course"/>
      <mapping class="cn.com.scitc.webapp3.model.Student"/>
      <mapping class="cn.com.scitc.webapp3.model.Score"/>
      <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>